<div class="container py-3 mt-5 mb-5">
  <div class="row">

    <div class="col-sm-12 col-md-6">
      <% @product.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, radius: 60 %>
        <% end %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @product.sku %></h1>
      <p>Some awesome description of our amazing bikes.</p>
      <p>Amount: <%= humanized_money_with_symbol(@product.price) %></p>

      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'product_id', @product.id %>
        <%= submit_tag 'Rent!', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
