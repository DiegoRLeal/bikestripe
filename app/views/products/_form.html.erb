<div class="row justify-content-center">
  <div class="col-md-6 mb-5">
<%= simple_form_for(@product) do |f| %>
  <%= f.input :sku, label: "Your bike model" %>
  <%= f.input :localization, label: "The city where your bike is" %>
  <%= f.input :price %>
  <%= f.input :bike_condition, as: :radio_buttons, collection: ['new', 'used', 'under maintence'] %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit %>
<% end %>
</div>
<hr>

<div class="container mt-4">
  <%= link_to "Back", products_path, class:"btn btn-secondary" %>
</div>
</div>
