<div class="container mt-5 mb-5">
  <h1>Products</h1>
  <%= link_to "Create", new_product_path, class:"btn btn-primary" %>
  <div class="row">
    <div class="cards">
      <% @products.each do |product| %>
        <div class="card-trip">
        <%= cl_image_tag product.photos.first.key, :crop=>"fill"%>
        <div class="card-trip-infos">
        <div>
        <h2><%= link_to product.sku, product_path(product) %></h2>
        <p><%= product.localization %></p>
        <% if product.available? %>
          <%= link_to 'Available', products_path(product), class:"btn btn-outline-primary" %>
        <% else %>
          <td><button type="button" class="btn btn-outline-dark" disabled>Not Available</button></td>
        <% end %>
        <% if product.user == current_user %>
          <%= link_to "Edit", edit_product_path(product), class:"btn btn-outline-primary" %></td>
          <%= link_to "Delete",
                                    product,
                                    method: :delete,
                                    data: { confirm: "Are you sure?" }, class:"btn btn-outline-primary" %></td>
        <% end %>
        </div>
        <h2 class="card-trip-pricing">$<%= product.price %></h2>
        </div>
        </div>
      <% end %>
    </div>
</div>
